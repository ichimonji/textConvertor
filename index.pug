doctype html

include _mixin
include _data

html( lang = 'en' )
  head
    title= $title
    meta( charset = 'utf-8' )
    +metaAll( metas )
    link( rel = 'image_src', href = 'http://myth.maji.asia/figure/aloes.jpg' )
    +linkAll( links )
  body
    header.header
      h1.head= $title
      button.btn.btn-primary( data-toggle = 'modal', data-target = '#help' )= 'help'
    main.main
      div.main-wrap
        section.area-input
          div.area-input-text
            div.form-group
              label( for = 'text-i' ) Original Text #[span#selDisp]
              textarea.form-control#text-i( placeholder = 'Original Text' )
          div.area-input-text
            div.form-group
              label( for= 'text-o' ) Converted Text
              textarea.form-control#text-o( placeholder = 'Converted Text' )
          div.area-input-button
            div#lengthDisp
            div.btn-group-vertical
              +bt( 'move', '変換後テキストを変換前テキストエリアへ移動' ) #[i.glyphicon.glyphicon-chevron-left] MOVE
              +bt( 'delete', 'テキストを一括削除' ) #[i.glyphicon.glyphicon-remove] DELETE
              +bt( 'undo', '一段階前に戻す' ) #[i.glyphicon.glyphicon-undo] UNDO
              +bt( 'change', '左右を入れ替え' ) #[i.fa.fa-exchange] REPLACE
              label.btn.btn-sm.btn-primary #[input.automove( name = 'automove', type = 'checkbox' )] AUTO MOVE
        section.area-control
          div.ctLabel.btn-group.btn-group-sm.btn-group-justified
            label.btn.btn-info( for = 'ctGroup_code' ) コード/数値型
            label.btn.btn-info( for = 'ctGroup_lang' ) 言語
            label.btn.btn-info( for = 'ctGroup_cont' ) 文字列操作
            label.btn.btn-info( for = 'ctGroup_unit' ) 文字列生成
          input.ctGroupRd.hidden#ctGroup_code( type = 'radio', name = 'ctGroupRd', checked = 'checked' )
          div.ctGroup
            +dlBox('ctset01')
            +dlBox('ctset02')
            +dlBox('ctset03')
            +dlBox('ctset04')
          input.ctGroupRd.hidden#ctGroup_lang( type = 'radio', name = 'ctGroupRd' )
          div.ctGroup
            +dlBox('ctset16')
            +dlBox('ctset09')
            +dlBox('ctset10')
            +dlBox('ctset11')
          input.ctGroupRd.hidden#ctGroup_cont( type = 'radio', name = 'ctGroupRd' )
          div.ctGroup
            +dlBox('ctset05')
            +dlBox('ctset06')
            +dlBox('ctset07')
            +dlBox('ctset08')
            +dlBox('ctset12')
              div.form-inline
                div.form-group
                  div.input-group.input-group-sm
                    span.input-group-btn
                      label.btn.btn-primary #[input#caps(type = 'checkbox' )] Aa
                    input.form-control( type = 'text', id = 'rep_find', value = '', placeholder = 'Find What' )
                  div.input-group.input-group-sm
                    input.form-control( type = 'text', id = 'rep_rep', value = '', placeholder = 'Replace With' )
                    span.input-group-btn
                      button.btn.btn-primary.bt-control( type = 'button', title = '置換' , value = 'replacement' ) 置換
            +dlBox('ctset14')
          input.ctGroupRd.hidden#ctGroup_unit( type = 'radio', name = 'ctGroupRd' )
          div.ctGroup
            +dlBox('ctset13')
              div.form-inline
                div.form-group
                  div.input-group.input-group-sm
                    label.input-group-addon( title = '～から' ) from
                    input.form-control#mx_start( type = 'number', value = '0', placeholder = 'Start' )
                  div.input-group.input-group-sm
                    label.input-group-addon( title = '～まで' ) to
                    input.form-control#mx_end( type = 'number', value = '100', placeholder = 'End' )
                  div.input-group.input-group-sm
                    label.input-group-addon( title = '～刻みで' ) step
                    input.form-control#mx_step( type = 'number', value = '1', placeholder = 'Step' )
                  div.input-group.input-group-sm
                    label.input-group-addon( title = 'ゼロパディング' ) padding
                    input.form-control#mx_padding( type = 'number', value = '3', placeholder = 'Padding' )
                  div.input-group.input-group-sm
                    label.input-group-addon( title = 'ごとに' ) join
                    input.form-control#mx_join( type = 'text', value = '\\n', placeholder = 'Join' )
                  div.input-group.input-group-sm
                    label.input-group-addon( title = '置換' ) Reg
                    input.form-control#mx_reg( type = 'text', value = '$1: $2', placeholder = 'Reg' )
                  div.input-group.input-group-sm
                    label.input-group-addon #[input#mx_of( type = 'checkbox', checked = 'checked' )] overflow
                    button.form-control.btn.btn-primary.bt-control( type = 'button', title = '連番生成', value = 'numbering' ) 生成
            +dlBox('ctset15')
              div.form-inline
                div.form-group
                  div.input-group.input-group-sm
                    label.input-group-addon( title = '開始日' ) Start
                    input.form-control#dt_start( type = 'date', value = '2017-01-01', placeholder = 'YYYY-MM-DD', pattern = '[0-9\-/]' )
                    label.input-group-addon( title = '終了日' ) End
                    input.form-control#dt_end( type = 'date', value = '2017-12-12', placeholder = 'YYYY-MM-DD', pattern = '[0-9\-/]' )
                  div.input-group.input-group-sm
                    label.input-group-addon( title = '～刻みで' ) step
                    input.form-control#dt_step( type = 'number', value = '1', placeholder = 'Step' )
                  div.input-group.input-group-sm
                    label.input-group-addon( title = 'ごとに' ) join
                    input.form-control#dt_join( type = 'text', value = '\\n', placeholder = 'Join' )
                  div.input-group.input-group-sm
                    label.input-group-addon( title = '日付タイプ' ) Type
                    input.form-control#dt_reg( type = 'text', value = 'YYYY/MM/DD (d2)', placeholder = 'Type' )
                  div.input-group.input-group-sm
                    label.input-group-addon( title = '置換' ) Reg
                    input.form-control#dt_reg2( type = 'text', value = '$1: $2', placeholder = 'Reg' )
                  div.input-group.input-group-sm
                    label.input-group-addon #[input#dt_of( type = 'checkbox', checked = 'checked' )] overflow
                    button.form-control.btn.btn-primary.bt-control( type = 'button', title = '日付連番生成', value = 'dating' ) 生成
            +dlBox('ctset17')
              div.form-inline
                div.form-group
                  div.input-group.input-group-sm
                    label.input-group-addon( title = '～刻みで' ) step
                    input.form-control#rz_step( type = 'number', value = '1', placeholder = 'Step' )
                  div.input-group.input-group-sm
                    label.input-group-addon( title = '～回' ) amount
                    input.form-control#rz_amount( type = 'number', value = '10', placeholder = 'Amount' )
                  div.input-group.input-group-sm
                    label.input-group-addon( title = 'ごとに' ) join
                    input.form-control#rz_join( type = 'text', value = '\\n', placeholder = 'Join' )
                  div.input-group.input-group-sm
                    label.input-group-addon( title = '置換' ) Reg
                    input.form-control#rz_reg( type = 'text', value = '$1: $2', placeholder = 'Reg' )
                  div.input-group.input-group-sm
                    label.input-group-addon #[input#rz_of( type = 'checkbox', checked = 'checked' )] overflow
                    button.form-control.btn.btn-primary.bt-control( type = 'button', title = '連続データ', value = 'listing' ) 生成
          ul.link-list
            li: a.btn.btn-primary( data-toggle = 'modal', data-target = '#help' )= 'help'
            li: a.btn.btn-primary( target='_blank', href='https://github.com/ichimonji/textConvertor' )= 'github'
      section.info
        div.modal.help.fade#help( tabindex = '-1', role = 'dialog' )
          div.modal-dialog( role = 'document' )
            div.modal-content
              div.modal-header
                button.close( type = 'button', data-dismiss = 'modal', aria-label = 'Close' )
                  span( aria-hidden = 'true' ) &times;
                h4.modal-title #{$title} help
              div.modal-body
                include:markdown-it readme.md
              div.modal-footer
                button.btn.btn-default( type = 'button', data-dismiss = 'modal' ) Close
    footer.footer
      a( href = 'https://twitter.com/ichimonji_haji' ) #[i.fa.fa-twitter] @ichimonji_haji
    +jsAll( scripts )