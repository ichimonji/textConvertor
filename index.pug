                div.btn-group.btn-group-sm.btn-col13#ligat_opt
                button.btn.btn-primary.bt-control( type = 'button', value = 'ligature' )= '決定'
      section.info
        div.modal.help.fade#help( tabindex = '-1', role = 'dialog' )
          div.modal-dialog( role = 'document' )
            div.modal-content
              div.modal-header
                button.close( type = 'button', data-dismiss = 'modal', aria-label = 'Close' )
                  span( aria-hidden = 'true' ) &times;
                h4.modal-title #{$title} help
              div.modal-body
                include:markdown-it readme.md
              div.modal-footer
                button.btn.btn-default( type = 'button', data-dismiss = 'modal' ) Close
    footer.footer
      a( href = 'https://twitter.com/ichimonji_haji' ) #[i.fa.fa-twitter] @ichimonji_haji
    +jsAll( scripts )