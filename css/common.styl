@import 'nib'
@import url('https://fonts.googleapis.com/css?family=Noto+Sans')
@import url("http://fonts.googleapis.com/earlyaccess/notosansjp.css")

// width global
sm = 768px
lg = 1200px

// color global
$col_white = #fff
$col_lightgray = #aaa
$col_gray = #555
$col_darkgray = #333
$col_primary = #337ab7
$col_primaryHover = #286090
$col_info = #5bc0de
$col_infoHover = #31b0d5

// mixins
// break(media query)
break(scname)
  @media only screen and (max-width: scname)
    {block}

breakUp(scname)
  @media only screen and (min-width: scname + 1 )
    {block}

sp_ctset(idname)
  #{idname} + .ct-set
    {block}

// flex shorthand
flexer(dir = row, wr = nowrap, jc = flex-start, ai = stretch, ac = stretch)
  display flex
  flex-direction dir
  flex-wrap wr
  justify-content jc
  align-items ai
  align-content ac

:root
  font-size 14px
  +break(sm)
    font-size 0.86rem

html,body
  padding 0
  margin 0
  font-family 'Lato', 'Noto Sans', 'Noto Sans JP', sans-serif
  background-color $col_darkgray

body
  min-height 100vh
  flexer( column, nowrap, space-between, stretch )

input[type=text]
  font-family inherit
  font-family 'Noto Sans JP', sans-serif
  +break(sm)
    font-size 16px!important

input[type=radio]
input[type=checkbox]
  margin-top 0
  vertical-align middle
  position relative
  top -2px

input[type=number]
  // for FF, IE
  -moz-appearance textfield
  &::-webkit-outer-spin-button
  &::-webkit-inner-spin-button
    // for Chrome, Safari
    -webkit-appearance: none
    margin: 0

#forCopy
  position fixed
  z-index -100
  top 0
  font-size 0
  opacity 0

h1, h2, h3
  font-size inherit

.header
  background-color $col_gray
  margin 0 0 10px
  color $col_lightgray
  font-size 2rem
  padding 10px
  flexer( row, nowrap, space-between, center )
  +break(sm)
    background-color $col_darkgray
    font-size 1.5rem
    margin-bottom 0
    padding 5px
  & > .head
    display inline-block
    margin 0
    font-weight 900
    vertical-align middle
  & > div > .btn
    line-height 1
    vertical-align middle
    +break(sm)
      padding 4px

.footer
  background-color $col_gray
  margin 10px 0 0
  padding 5px 10px
  color $col_lightgray
  font-size 1rem
  text-align right
  +break(sm)
    background-color $col_darkgray
    margin-top 0

.container
  width 100%
  min-height 100vh
  flexer( column, nowrap, stretch, stretch )
  margin 0
  padding 0

.main
  flexer( column, nowrap, flex-start, center )
  flex-grow 1
  margin 0 10px
  +break(sm)
    margin 0

.main-wrap
  flexer( column, nowrap, flex-start, stretch )
  margin 0
  padding 0
  background-color $col_gray
  width lg
  width 800px
  max-width 100%
  box-sizing border-box
  padding 4px
  color $col_lightgray
  border-radius 10px
  .form-group
    margin-bottom 0
    & > label
      +break(sm)
        display none
  +break(sm)
    padding 2px
    min-width 200px
    border-radius 0

.area-input
  flexer( row, nowrap, center, flex-end )
  margin 0
  padding 0
  &-text
  &-button
    padding 0 4px 4px
    box-sizing border-box
    flex-shrink 1
  &-text
    flex-grow 45
    textarea
      height 240px
  &-button
    .btn-group-vertical
      width 100%
      .btn
        text-align left

.glyphicon
  &-undo
    transform scale(-1,1)
    &:before
      content "\e030"
  &-chevron-left
    &:before
      +break(sm)
        content "\e113"
.fa-exchange
  +break(sm)
    transform rotateZ(90deg)
.area-control
  flexer( row, wrap, flex-start, flex-start )
  +break(sm)
    flexer( row, wrap, stretch, flex-start )
    margin 0
.genre
  display none
  &:not(:checked)
    & + .ct-set
      width auto
      margin-right -5px
      +break(sm)
        margin-right 2px
      & > .body
        display none
      & > .head
        margin-right 5px
        text-align center
        +break(sm)
          margin-right 0
.ctLabel
  margin 0 -4px
  width auto
  border-radius 0
  .btn
    border-radius 0 !important
  +break(sm)
    width auto
    margin 0 -2px 3px

.ctGroup
  flexer( row, wrap, stretch, flex-start )
  width auto
  margin 1px
  +break(sm)
    width 100%
    flexer( row, wrap, stretch, flex-start )
    margin 0
  &Rd + &
    display none
  &Rd:checked + &
    display flex

.ct-set
  flexer( row, nowrap, flex-start, flex-start )
  padding 5px
  box-sizing border-box
  margin 0
  width 100%
  & > .body
    width auto
    flex-shrink 1
    display inline-block
    font-size 0
    border-radius 3px
    overflow hidden
    flexer( row, wrap, stretch, flex-start )
    .btn
      flex 1 1
      border-top none
      border-bottom none
      border-left none
      border-right none
      border-radius 0
    .btn-group
      flexer( row, wrap, stretch, flex-start )
      width 100%
    & .btn
      margin 0 !important
      border none !important
    & .btn-group
      margin 0 !important
      border none !important
    & .form-control
      border none !important
      box-shadow none !important
    .btn:not(:last-of-type)
    .input-group:not(:last-of-type) .form-control:last-child
      border-top-right-radius 0
      border-bottom-right-radius 0
      border-left-width 0px
    .btn:not(:first-of-type)
    .input-group:not(:first-of-type) .form-control:first-child
      border-top-left-radius 0
      border-bottom-left-radius 0
  & > .head
    flexer( row, nowrap, stretch, center )
    width 110px
    margin-bottom 0
    border none
    color $col_primary
    text-align right
    padding-right 10px
    flex-shrink 0
    border-radius 3px
    background-color $col_white
    padding 4px 4px
    font-size 12px
    line-height 1.5
    margin-right 10px
    border 1px solid $col_white
    label
      flex-grow 1
      display block
      margin-bottom 0
      text-align left
    .fa
      font-size 16px
  .form-inline
    width auto
    margin-right auto
    .form-group
      flexer( row, wrap, stretch, flex-start )
      .input-group-sm
        width 20%
        .input-group-addon
          background-color $col_info
          color $col_white
          border-radius 0
          border none
          padding 5px
        input
        select
        option
          background-color lighten( $col_info, 60% )
        @media screen and ( min-width: 769px )
          &.input-group-corn
            border-bottom-right-radius 4px
            border-top-right-radius 4px
            overflow hidden
          &.input-group-bt
            border-bottom-right-radius 4px
            overflow hidden

.link-list
  display block
  width 100%
  margin 10px auto 10px
  text-align center
  li
    display inline-block
    & + li
      margin-left 20px
    a
      display block

.cd
  text-align center
  a
    color $col_white

+break(sm)
  #lengthDisp
    font-size 12px
    line-height 16px
    text-align center
  .area-input
    flex-direction column
    align-items stretch
    &-text textarea
      width 100%
      height 120px
      padding 5px
    &-button
      width 100%
      .btn-group-vertical
        flexer( row, nowrap, center, center )
        margin 0 auto
        width 96%
        height 28px
        text-align center
        font-size 0
        border-radius 4px
        overflow hidden
        .btn
          flex 1 1
          display inline-block
          text-align center
          border-radius 0!important
          & > i + span
            display none

  .btn-group-sm > .btn, .btn-sm
    padding 5px
  .ct-set
    padding-bottom 0
    flex-direction column
    align-items flex-start
    overflow hidden
    border-radius 3px
    padding 0
    margin 1px 2px 2px
    width 100%
    flex-grow 1
    & > .body
      width 100%
      border-radius 0 0 3px 3px
      flexer( row, wrap, stretch, flex-start )
      .btn-group
        width 100%
        flexer( row, wrap, stretch, flex-start )
        border-radius 0 !important
        border-width 0 !important
      .btn
      .input-group .form-control
      .btn:not(:first-of-type)
      .input-group:not(:first-of-type) .form-control:first-child
      .btn:not(:last-of-type)
      .input-group:not(:last-of-type) .form-control:last-child
        flex-grow 1
        border-radius 0 !important
        border-width 0 !important
      .btn:not(:last-of-type)
      .input-group:not(:last-of-type) .form-control:last-child
        border-left-width 1px
      .form-inline
        display block
        width 100%
      .form-group
        .input-group-sm
          width 50%
          &.input-group-bt
          &.input-group-spfull
            width 100%
          &.input-group-sp3
            width 25%
          &.input-group-sp4
            width 33.33%
          &.input-group-sp4r
            width 33.34%
          &.input-group-sp8
            width 66.66%
          &.input-group-sp8r
            width 66.67%
          &.input-group-sp9
            width 75%

    & > .head
      width 100%
      border none
      margin-bottom 0
      border-radius 0
      label
        margin-bottom 0
    [for=text-i]
      display none

// 特殊
#ctset_tidy + .ct-set > .body
  & > .form-inline
    & > .form-group
      flexer( row, wrap, stretch, flex-start )
      & > .input-group-sm
        flexer( row, wrap, stretch, flex-start )
        border-radius 0
        width 50%
        +break(sm)
          width 100%
        & > .form-control
          width 60%
          border none
          border-radius 0
        & > .input-group-btn
          width auto
          flex-grow 1
          flex-shrink 1
          & > .btn
            border-radius 0
            width 100%
  & > .btn
    box-sizing border-box
#ctset_grep + .ct-set > .body
  & > .form-inline
    & > .form-group
      flexer( row, wrap, stretch, flex-start )
      & > .input-group-sm
        flexer( row, wrap, stretch, flex-start )
        border-radius 0
        width 50%
        +break(sm)
          width 100%
        & > .form-control
          width 80%
          border none
          border-radius 0
        & > .input-group-btn
          width auto
          flex-grow 1
          flex-shrink 1
          & > .btn
            border-radius 0
            width 100%
#ctset_numbering + .ct-set > .body
  & > .form-inline
    & > .form-group
      & > .input-group-sm
        &:nth-of-type(5)
          +breakUp(sm)
            border-bottom-right-radius 3px
            overflow hidden
#ctset_dating + .ct-set > .body
  & > .form-inline
    & > .form-group
      & > .input-group-sm
        &:nth-of-type(4)
          +breakUp(sm)
            border-top-right-radius 3px
            border-bottom-right-radius 3px
            overflow hidden
#ctset_listing + .ct-set > .body
  & > .form-inline
    & > .form-group
      & > .input-group-sm
        &:nth-of-type(3)
        &:nth-of-type(4)
          +break(sm)
            width 33.33%
        &:nth-of-type(5)
          +break(sm)
            width 33.34%
          +breakUp(sm)
            border-bottom-right-radius 3px
            overflow hidden
.section-ime #uni
  #uni_opt
    .btn-default
      font-size 10px
      line-height 1
      padding 3px
      font-family Lato
      font-weight 700
      &:hover
        background-color $col_white


// help
.help
  .modal
    &-content
      overflow hidden
    &-header
      background-color $col_primary
      color $col_white
      border none
      padding 10px
      .close
      .close:focus
      .close:hover
        color $col_white
    &-body
      padding 10px
      font-size 12px
      blockquote
        font-size 12px
        padding 5px
      strong
        font-size 14px
      table
        tr
          th, td
            border 1px solid #666
            padding 3px 6px
      & > h1
        display none
      & > h2
        background-color $col_darkgray
        color $col_white
        margin 10px -10px -10px
        padding 10px
        font-size 18px
      & > h3
        display block
        background-color $col_gray
        color $col_white
        margin 10px -10px 10px
        padding 6px 10px
        font-size 16px
        & + br
          display none
      & > h4
        display block
        margin 10px 0
        padding 10px 10px 4px 0
        border-bottom 1px solid #000
        font-size 14px
        line-height 1
        & + br
          display none
      & > h3 + h4
        margin-top -10px
      & > ul > li
        padding-left 5px
        & > code:first-child
          margin-left -5px
        & + li
          margin-top 5px
        & > ul > li
          padding-left 5px
          text-indent -5px
    &-footer
      padding 10px

.section-ime
  .modal
    &-content
      overflow hidden
    &-header
      background-color $col_primary
      color $col_white
      border none
      padding 10px
      .close
      .close:focus
      .close:hover
        color $col_white
    &-body
      padding 10px
      font-size 12px
  .alphaDisp
  .ligatDisp
  .pyinDisp
  .uniDisp
    padding 5px 10px
    background-color $col_lightgray
    color $col_primary
    font-size 2rem
    border-radius 5px
    min-height 1em
    word-wrap break-word
  .pyinDisp + .pyinDisp
    margin-top 5px
  .btn-group > .btn:first-child:not(:last-child):not(.dropdown-toggle)
  .btn-group > .btn:last-child:not(:first-child)
  .btn-group > .dropdown-toggle:not(:first-child)
    border-radius 0
  .btn-group
    margin-top 10px
    flexer( row, wrap, stretch, flex-start )
    overflow hidden
    border-radius 4px
    background-color $col_primary
    .btn
      border none
      float none
      flex-grow 1
      flex-shrink 1
  .btn-col13
    .btn
      min-width 11.11%
    .btn-info:last-child
      border-bottom-right-radius 4px
  .btn-col10
    .btn
      min-width 10%
    .btn-info:last-child
      border-bottom-right-radius 4px
  .bt-control
    display block
    width 4em
    margin 10px auto 0
  #alpha_opt
  #ligat_opt
    .btn
      font-size 2rem
#settings
  .btn-group
    flexer( row, wrap, stretch, flex-start )
    border-radius 4px
    overflow hidden
    .btn
      flex-grow 1
      border-radius 0
  .btn-2rows
    .btn
      width 50%

